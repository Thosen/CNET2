<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="900">
    <Grid>
        <Button x:Name="btnByOne" Content="Search by each" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="16" BorderBrush="#FF092BE8" Foreground="#FFDAD550" Height="56" Width="120" Click="btnByOne_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FF49EF0F" Offset="1"/>
                    <GradientStop Color="#FFA0DC86" Offset="0.853"/>
                    <GradientStop Color="#FF030B00" Offset="0"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="btnWhole" Content="Search whole" HorizontalAlignment="Left" Margin="135,10,0,0" VerticalAlignment="Top" FontSize="16" BorderBrush="#FF092BE8" Foreground="#FFDAD550" Height="56" Width="120" Click="btnWhole_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FF49EF0F" Offset="1"/>
                    <GradientStop Color="#FFA0DC86" Offset="0.853"/>
                    <GradientStop Color="#FF030B00" Offset="0"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Grid Margin="10,80,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <ScrollViewer Grid.Column="0" Margin="0,0,5,0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <TextBlock x:Name="txtBox1" TextWrapping="Wrap" />
            </ScrollViewer>
            <ScrollViewer Grid.Column="1" Margin="5,0,0,0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <TextBlock x:Name="txtBox2" TextWrapping="Wrap" />
            </ScrollViewer>
        </Grid>
        <Button x:Name="btnColour" Content="Colour" HorizontalAlignment="Left" Margin="260,10,0,0" VerticalAlignment="Top" FontSize="16" BorderBrush="#FF092BE8" Foreground="Black" Background="White" Height="56" Width="120" Click="btnColour_Click"/>
    </Grid>
</Window>
